
<%= render "shared/second-header"%>
<div class='transaction-contents'>
<div class="Cardpage">
<%= form_with  url:cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>


    <h1 class="info-input-headline">新規カード登録</h1>
  <br>
  <div class= "form-group">
  <div class='credit-card-form'>
    <%= f.label :number, "カード情報" %>
    <span class='red-label'>必須</span>
    <%= f.text_field :number, class:'number', id: 'number', placeholder:"カード番号(半角英数字)", maxlength:"16" %>
    <div class='available-card'>
          <%= image_tag 'card-visa.gif', class: 'card-logo'%>
          <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
          <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
          <%= image_tag 'card-amex.gif', class: 'card-logo'%>
        </div>
  </div>
  </div>
  <div class= "form-group">
    <div class="form-text-wrap">
    <%= f.label :cvc ,"セキュリティコード" %>
    <span class='red-label'>必須</span>
    </div>
    <%= f.text_field :cvc, class:"cvc", id:'cvc', placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  
  </div>
  <div class= "form-group">
  
  <br>
  <div class="form-text-wrap">
    有効期限
    <span class='red-label'>必須</span>
     </div>
    <div class='input-expiration-date-wrap'>
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month", id:'exp_month' %>
      <p>月</p>
      <%= f.select :exp_year, 21..25, {include_blank: "---"}, class: "exp_year", id:'exp_year' %>
      <p>年</p>
    </div>
  
   </div>
   <div class="registration-btn">
  <%= f.submit "登録する" , class:"button" %>
   </div>
<% end %>
</div>
</div>
<%= render "shared/second-footer"%>
